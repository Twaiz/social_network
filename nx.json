{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "production": [
      "default",
      "!{projectRoot}/.eslintrc.json",
      "!{projectRoot}/eslint.config.mjs",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/jest.config.[jt]s",
      "!{projectRoot}/src/test-setup.[jt]s",
      "!{projectRoot}/test-setup.[jt]s"
    ],
    "sharedGlobals": ["{workspaceRoot}/.github/workflows/ci.yml"]
  },
  "nxCloudId": "67f129f910b1822ec0cf31ff",
  "plugins": [
    {
      "plugin": "@nx/js/typescript",
      "options": {
        "typecheck": {
          "targetName": "typecheck"
        },
        "build": {
          "targetName": "build",
          "configName": "tsconfig.lib.json",
          "buildDepsName": "build-deps",
          "watchDepsName": "watch-deps"
        }
      },
      "exclude": [
        "libs/backend/configs/*",
        "libs/backend/jwt-utils/*",
        "libs/backend/interfaces/*",
        "libs/backend/enums/*",
        "libs/backend/types/*",
        "libs/backend/get-env/*",
        "libs/backend/strategies/*",
        "libs/backend/decorators/*",
        "libs/backend/guards/*",
        "libs/backend/bootstrap/*",
        "libs/backend/services/*",
        "libs/backend/dtos/*",
        "libs/backend/modules/*",
        "libs/backend/controllers/*",
        "libs/backend/models/*",
        "libs/backend/auth-lib/*",
        "libs/backend/two-fa-lib/*",
        "libs/backend/shared/*",
        "libs/backend/utils/*"
      ]
    },
    {
      "plugin": "@nx/webpack/plugin",
      "options": {
        "buildTargetName": "build",
        "serveTargetName": "serve",
        "previewTargetName": "preview",
        "buildDepsTargetName": "build-deps",
        "watchDepsTargetName": "watch-deps"
      }
    },
    {
      "plugin": "@nx/eslint/plugin",
      "options": {
        "targetName": "lint"
      }
    },
    {
      "plugin": "@nx/jest/plugin",
      "options": {
        "targetName": "test"
      },
      "exclude": ["apps/backend/two-fa-e2e/**/*"]
    },
    {
      "plugin": "@nx/js/typescript",
      "include": [
        "libs/backend/configs/*",
        "libs/backend/jwt-utils/*",
        "libs/backend/interfaces/*",
        "libs/backend/enums/*",
        "libs/backend/types/*",
        "libs/backend/get-env/*",
        "libs/backend/strategies/*",
        "libs/backend/decorators/*",
        "libs/backend/guards/*",
        "libs/backend/bootstrap/*",
        "libs/backend/services/*",
        "libs/backend/dtos/*",
        "libs/backend/modules/*",
        "libs/backend/controllers/*",
        "libs/backend/models/*",
        "libs/backend/auth-lib/*",
        "libs/backend/two-fa-lib/*",
        "libs/backend/shared/*",
        "libs/backend/utils/*"
      ],
      "options": {
        "typecheck": {
          "targetName": "typecheck"
        }
      }
    }
  ],
  "targetDefaults": {
    "test": {
      "dependsOn": ["^build"]
    }
  }
}
