{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@bootstrap": ["./libs/backend/bootstrap/src"],
      "@configs": ["./libs/backend/configs/src"],
      "@decorators": ["./libs/backend/decorators/src"],
      "@enums": ["./libs/backend/enums/src"],
      "@get-env": ["./libs/backend/get-env/src"],
      "@guards": ["./libs/backend/guards/src"],
      "@interfaces": ["./libs/backend/interfaces/src"],
      "@jwt-utils": ["./libs/backend/jwt-utils/src"],
      "@dtos": ["./libs/backend/dtos/src"],
      "@services": ["./libs/backend/services/src"]
    },
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "customConditions": ["development"]
  }
}
