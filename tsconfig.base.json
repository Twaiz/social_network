{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@auth-lib": ["./libs/backend/auth-lib/src"],
      "@bootstrap": ["./libs/backend/bootstrap/src"],
      "@configs": ["./libs/backend/configs/src"],
      "@get-env": ["./libs/backend/get-env/src"],
      "@models": ["./libs/backend/models/src"],
      "@shared": ["./libs/backend/shared/src"],
      "@two-fa-lib": ["./libs/backend/two-fa-lib/src"]
    },
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "customConditions": ["development"]
  }
}
