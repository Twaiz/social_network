{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@backend-configs": ["./libs/backend/backend-configs/src"],
      "@interfaces": ["./libs/backend/interfaces/src"],
      "@jwt-utils": ["./libs/backend/jwt-utils/src"],
      "@roles": ["./libs/backend/roles/src"],
      "@types": ["./libs/backend/types/src"]
    },
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "customConditions": ["development"]
  }
}
