{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
    "emitDeclarationOnly": true,
    "types": ["node"],
    "target": "es2021",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*.ts",
    "../shared/src/config/getJwtConfig.ts",
    "../shared/src/config/connectToMongoDB.ts",
    "../shared/src/config/configs.constants.ts"
  ],
  "references": [
    {
      "path": "../get-env/tsconfig.lib.json"
    }
  ]
}
