{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "paths": {
      "@controllers": ["./libs/backend/controllers/src"],
      "@models": ["./libs/backend/models/src"],
      "@services": ["./libs/backend/services/src"],
      "@jwt-utils": ["./libs/backend/jwt-utils/src"],
      "@configs": ["./libs/backend/configs/src"]
    },
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
    "emitDeclarationOnly": true,
    "types": ["node"],
    "target": "es2021",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*.ts"],
  "references": [
    {
      "path": "../controllers/tsconfig.lib.json"
    },
    {
      "path": "../models/tsconfig.lib.json"
    },
    {
      "path": "../services/tsconfig.lib.json"
    },
    {
      "path": "../jwt-utils/tsconfig.lib.json"
    },
    {
      "path": "../configs/tsconfig.lib.json"
    }
  ]
}
