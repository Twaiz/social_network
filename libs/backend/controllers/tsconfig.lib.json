{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "paths": {
      "@interfaces": ["./libs/backend/interfaces/src"],
      "@decorators": ["./libs/backend/decorators/src"],
      "@enums": ["./libs/backend/enums/src"],
      "@guards": ["./libs/backend/guards/src"],
      "@services": ["./libs/backend/services/src"],
      "@dtos": ["./libs/backend/dtos/src"]
    },
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
    "emitDeclarationOnly": true,
    "types": ["node"],
    "target": "es2021",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*.ts"],
  "references": [
    {
      "path": "../interfaces/tsconfig.lib.json"
    },
    {
      "path": "../decorators/tsconfig.lib.json"
    },
    {
      "path": "../enums/tsconfig.lib.json"
    },
    {
      "path": "../guards/tsconfig.lib.json"
    },
    {
      "path": "../services/tsconfig.lib.json"
    },
    {
      "path": "../dtos/tsconfig.lib.json"
    }
  ]
}
