{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    //TODO Убрать у всех файлах tsconfig.lib.json в compilerOptions массив paths. Без него и так всё работает :)
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
    "emitDeclarationOnly": true,
    "types": ["node"],
    "target": "es2021",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*.ts"],
  "references": [
    {
      "path": "../get-env/tsconfig.lib.json"
    }
  ]
}
