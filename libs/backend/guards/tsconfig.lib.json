{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "paths": {
      "@enums": ["./libs/backend/enums/src"],
      "@decorators": ["./libs/backend/decorators/src"]
    },
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
    "emitDeclarationOnly": true,
    "types": ["node"],
    "target": "es2021",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*.ts"],
  "references": [
    {
      "path": "../enums/tsconfig.lib.json"
    },
    {
      "path": "../decorators/tsconfig.lib.json"
    }
  ]
}
