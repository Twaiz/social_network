{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "paths": {
      "@shared": ["./libs/backend/shared/src"],
      "@get-env": ["./libs/backend/get-env/src"],
      "@models": ["./libs/backend/models/src"],
      "@configs": ["./libs/backend/configs/src"],
      "@two-fa-lib": ["./libs/backend/two-fa-lib/src"]
    },
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
    "emitDeclarationOnly": true,
    "types": ["node"],
    "target": "es2021",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*.ts"],
  "references": [
    {
      "path": "../shared/tsconfig.lib.json"
    },
    {
      "path": "../get-env/tsconfig.lib.json"
    },
    {
      "path": "../models/tsconfig.lib.json"
    },
    {
      "path": "../configs/tsconfig.lib.json"
    },
    {
      "path": "../two-fa-lib/tsconfig.lib.json"
    }
  ]
}
