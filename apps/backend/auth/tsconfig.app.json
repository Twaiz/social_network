{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "paths": {
      "@configs": ["./libs/backend/configs/src"],
      "@interfaces": ["./libs/backend/interfaces/src"],
      "@jwt-utils": ["./libs/backend/jwt-utils/src"],
      "@enums": ["./libs/backend/enums/src"],
      "@get-env": ["./libs/backend/get-env/src"],
      "@decorators": ["./libs/backend/decorators/src"],
      "@guards": ["./libs/backend/guards/src"],
      "@bootstrap": ["./libs/backend/bootstrap/src"],
      "@services": ["./libs/backend/services/src"],
      "@dtos": ["./libs/backend/dtos/src"],
      "@modules": ["./libs/backend/modules/src"]
    },
    "outDir": "dist",
    "types": ["node"],
    "rootDir": "src",
    "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es2021"
  },
  "include": [
    "src/**/*.ts",
    "../../../libs/backend/dtos/src/lib/auth/user-register-credentials.dto.ts",
    "../../../libs/backend/dtos/src/lib/auth/login.dto.ts"
  ],
  "exclude": ["eslint.config.js", "eslint.config.cjs", "eslint.config.mjs"],
  "references": [
    {
      "path": "../../../libs/backend/modules/tsconfig.lib.json"
    },
    {
      "path": "../../../libs/backend/bootstrap/tsconfig.lib.json"
    }
  ]
}
